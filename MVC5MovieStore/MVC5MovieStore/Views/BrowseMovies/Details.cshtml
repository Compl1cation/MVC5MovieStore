@model MVC5MovieStore.Models.Movie
@{
    ViewBag.Title = "Details";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>
<div id="detailsbox">

    <dl class="dl-horizontal" id="twcent">

        @if (Model.Files.Any(f => f.FileType == FileType.Poster))
        {

            <dd>
                <img src="~/File?id=@Model.Files.First( f=> f.FileType == FileType.Poster).FileId" alt="poster" id="posterdetails" />
            </dd>

        }
        <dt>
        @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd id="justify">
          @Html.DisplayFor(model => model.Description)
            <br /><br />
        </dd>
        <dt>
            Director
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Director.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            $@Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genres)
        </dt>
        <dd>
            @foreach (var genre in Model.Genres)
            {

                @Html.DisplayFor(Genres => genre.Name)
                @Html.Raw(" | ")
            }
        </dd>
    </dl>
    <div>
        <a class="addCartDetails" href="@Url.Action("AddToCart", "ShoppingCart", new { id = Model.MovieId} )" title="Add to Cart">Add to Cart<span class="glyphicon glyphicon-shopping-cart"></span></a>
    </div>
   <br />
     <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>

