@model MVC5MovieStore.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}
<script src="/Scripts/jquery-1.4.4.min.js"type="text/javascript"></script>
<script type="text/javascript" src="@Url.Content("/Scripts/MyScripts.js")"></script>

<h3>
    Review your cart:
</h3>

<div id="update-message">
</div>
<table>
    <tr>
        <th>
            Movie TItle
        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.CartItems)
    {
        <tr id="row-@item.RecordId">
            <td>
                @Html.ActionLink(item.Movie.Title, "Details", "BrowseMovies", new { id = item.MovieId }, new { @style="margin-right:5px;"})
            </td>
            <td style="padding-right:15px">
                @item.Movie.Price
            </td>
            <td id="item-count-@item.RecordId" style="padding-left:15px">
                @item.Count
            </td>
            <td>
                <a href="#" class="RemoveLink" data-id="@item.RecordId"> Remove from cart</a>
            </td>
        </tr>
    }
    <tr>
        <td>
            Total Price
        </td>
        <td></td>
        <td></td>
        <td id="cart-total">
            @Model.CartTotal
        </td>
    </tr>
</table>
</br>
<p class="button">
    @Html.ActionLink("Checkout", "AddressAndPayment", "Checkout")
</p>